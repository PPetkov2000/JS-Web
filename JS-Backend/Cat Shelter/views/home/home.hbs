<main>
  <section class="cats">
    {{#if cats}}
    <ul>
      {{#each cats}}
      <li>
        <img src="/images/uploads/{{ image }}" alt="{{ name }}">
        <h3>{{ name }}</h3>
        <p><span>Breed: </span>{{ breed }}</p>
        <p><span>Description: </span>{{ description }}</p>
        <ul class="buttons">
          <li class="btn edit"><a href="/cats/edit/{{ _id }}">Change Info</a></li>
          <li class="btn delete"><a href="/cats/shelter/{{ _id }}">New Home</a></li>
        </ul>
      </li>
      {{/each}}
    </ul>
    {{else}}
    <h1>No Cats</h1>
    {{/if}}
  </section>
</main>
